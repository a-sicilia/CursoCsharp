<Window x:Class="ConexionGestionPedidos.ActualizarCli"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConexionGestionPedidos"
        mc:Ignorable="d"
        Title="ActualizarCli" Height="250" Width="400"
        Background="Gray">
    <Grid Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,0,0">Nombre: </Label>
        <TextBox Grid.Column="1" Name="txtNombre" Height="20" Width="180" Margin="0,0,0,0" VerticalAlignment="Top"></TextBox>
        <Button Grid.ColumnSpan="2" Name="btnAceptar" Height="20" Width="70" Content="Aceptar" VerticalAlignment="Top" Margin="0,50,0,0" Background="Green" Foreground="White" Click="btnAceptar_Click"></Button>
        
    </Grid>
</Window>
